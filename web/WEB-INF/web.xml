    <servlet>
        <servlet-name>SurveyAddController</servlet-name>
        <servlet-class>am.pm.controller.admin.SurveyAddController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyAddController</servlet-name>
        <url-pattern>/admin/survey/add</url-pattern>
    </servlet-mapping>

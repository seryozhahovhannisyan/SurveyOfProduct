<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--servlet context listener allow to handel start end destroy method of application-->
    <listener>
        <listener-class>am.pm.controller.Initializer</listener-class>
    </listener>
    <!--servlets-->
    <servlet>
        <servlet-name>GoController</servlet-name>
        <servlet-class>am.pm.controller.GoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoController</servlet-name>
        <url-pattern>/go/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoAdminController</servlet-name>
        <servlet-class>am.pm.controller.admin.GoAdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoAdminController</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoUserController</servlet-name>
        <servlet-class>am.pm.controller.user.GoUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoUserController</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SigInController</servlet-name>
        <servlet-class>am.pm.controller.SigInController</servlet-class>
    </servlet>
    <servlet-mapping>
